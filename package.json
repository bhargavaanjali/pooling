{
  "name": "ride-my-way",
  "version": "1.0.0",
  "description": "Ride-My-Way is a carpooling application that provides drivers with the ability to create ride offers and passengers to join available ride offers.",
  "main": "app.js",
  "scripts": {
    "postinstall": "npm run build",
    "prebuild": "rimraf dist",
    "build": "babel server -d dist",
    "start": "npm run build && node dist/app.js",
    "start:dev": "nodemon server/app.js --exec babel-node",
    "lint": "./node_modules/.bin/eslint server",
    "lint:fix": "./node_modules/.bin/eslint server --fix",
    "test": "nyc mocha --require babel-register server/test/* --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauragift21/Ride-My-Way.git"
  },
  "author": "Egwuenu Gift <laurandidi21@gmail.com> (https://giftegwuenu.com/)",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/lauragift21/Ride-My-Way/issues"
  },
  "homepage": "https://github.com/lauragift21/Ride-My-Way#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "@babel/node": "^7.0.0-beta.51",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "1.7.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "4.16.3",
    "morgan": "^1.9.0",
    "rimraf": "2.6.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-http": "^4.0.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.12.0",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0"
  }
}
